@page
@model MegaDesk3._0.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Desk Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskQuoteId" />
            <input type="hidden" asp-for="DeskQuote.Desk.DeskId" />
            <input type="hidden" asp-for="DeskQuote.DesktopMaterial.DesktopMaterialId" />
            <input type="hidden" asp-for="DeskQuote.DeliveryType.DeliveryTypeId" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DeliveryType.DeliveryName" class="control-label"></label>
                <select asp-for="DeskQuote.DeliveryType.DeliveryName" class="form-control">
                    <option selected value="0">No Rush</option>
                    <option value="1">3 Day Rush</option>
                    <option value="2">5 Day Rush</option>
                    <option value="3">7 Day Rush</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DesktopMaterial.DesktopMaterialName" class="control-label"></label>
                <select asp-for="DeskQuote.DesktopMaterial.DesktopMaterialName" class="form-control">
                    <option selected value="Oak">Oak</option>
                    <option value="Laminate">Laminate</option>
                    <option value="Pine">Pine</option>
                    <option value="Rosewood">Rosewood</option>
                    <option value="Veneer">Veneer</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
                <select asp-for="DeskQuote.Desk.NumberOfDrawers" class="form-control">
                    <option selected value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Orders</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
